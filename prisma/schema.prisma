generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  username      String
  avatar        String?
  email         String  @unique
  password      String
  article       Article[]
  comment       Comment[]
  createdAt     DateTime  @default (now())  
}

model Article {
  id            String  @id @default(uuid())
  image         String?
  title         String
  description   String
  comment       Comment[]
  userId        String
  user          User    @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  deleteAt      DateTime?
}

model Comment {
  id            String  @id @default(uuid())
  description   String
  userId        String
  user          User    @relation(fields: [userId], references: [id])
  articleId     String
  article       Article  @relation(fields: [articleId], references: [id])
  createdAt     DateTime  @default(now())
  deleteAt      DateTime?
}